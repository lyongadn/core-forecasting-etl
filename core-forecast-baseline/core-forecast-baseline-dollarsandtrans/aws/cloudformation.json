{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This Glue job will generate the dates that will be used to calculate the ratios for every metric",
  "Parameters": {
      "Name": {
          "Type": "String",
          "Description": "Name of the project",
          "Default": "core-forecast-baseline-dollarsandtrans"
      },
      "Environment": {
          "Type": "String",
          "Default": "dev",
          "Description": "Environment name",
          "AllowedValues": [
              "dev",
              "test",
              "prod"
          ],
          "ConstraintDescription": "Must be one of dev, test, or prod"
      },
      "DeploymentBucket": {
          "Type": "String",
          "Description": "The S3 bucket for deployment artifacts"
      },
      "ETLScriptS3Key": {
          "Type": "String",
          "Description": "The key of the ETL script in the S3 deployment bucket"
      },
      "GlueRoleName": {
          "Type": "String",
          "Description": "Name of the IAM role to run Glue under",
          "Default": "core-forecast-baseline-dollarsandtrans-glue-role"
      }
  },
  "Resources": {
      "Role": {
          "Type": "AWS::IAM::Role",
          "Properties": {
              "PermissionsBoundary": {
                  "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/GithubActionsIamResourcePermissionsBoundary"
              },
              "AssumeRolePolicyDocument": {
                  "Version": "2012-10-17",
                  "Statement": [
                      {
                          "Effect": "Allow",
                          "Principal": {
                              "Service": [
                                  "glue.amazonaws.com"
                              ]
                          },
                          "Action": [
                              "sts:AssumeRole"
                          ]
                      }
                  ]
              },
              "RoleName": {
                  "Ref": "GlueRoleName"
              },
              "ManagedPolicyArns": [
                  "arn:aws:iam::aws:policy/service-role/AWSGlueServiceRole"
              ],
              "Policies": [
                  {
                      "PolicyName": "STSAssumeRolePolicy",
                      "PolicyDocument": {
                          "Version": "2012-10-17",
                          "Statement": [
                              {
                                  "Effect": "Allow",
                                  "Action": "sts:AssumeRole",
                                  "Resource": [
                                      "arn:aws:iam::123456789012:role/role-name"
                                  ]
                              }
                          ]
                      }
                  },
                  {
                    "PolicyName": {
                      "Fn::Sub": "${Environment}-${Name}-glue-policy"
                    },
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [
                            {
                                "Sid": "S3Policy",
                                "Effect": "Allow",
                                "Action": [
                                    "s3:PutObject",
                                    "s3:GetObject",
                                    "s3:ListBucket",
                                    "s3:DeleteObject"
                                ],
                                "Resource": [
                                    {"Fn::Sub": "arn:aws:s3:::${Environment}-q-forecasting-artifacts"},
                                    {"Fn::Sub": "arn:aws:s3:::${Environment}-q-forecasting-artifacts/*"},
                                    {"Fn::Sub": "arn:aws:s3:::${DeploymentBucket}"},
                                    {"Fn::Sub": "arn:aws:s3:::${DeploymentBucket}/*"}
                                ]
                            },
                            {
                                "Sid": "SecretsManagerPolicy",
                                "Effect": "Allow",
                                "Action": [
                                    "secretsmanager:GetSecretValue",
                                    "kms:Decrypt"
                                ],
                                "Resource": [
                                    {"Fn::Sub": "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:*"},
                                    {"Fn::Sub": "arn:aws:kms:${AWS::Region}:${AWS::AccountId}:key/*"}
                                ]
                            },
                            {
                                "Sid": "GluePolicy",
                                "Effect": "Allow",
                                "Action": [
                                    "glue:GetConnections",
                                    "glue:UpdateConnection",
                                    "glue:GetConnection"
                                ],
                                "Resource": [
                                    {"Fn::Sub": "arn:aws:glue:${AWS::Region}:${AWS::AccountId}:connection/*"},
                                    {"Fn::Sub": "arn:aws:glue:${AWS::Region}:${AWS::AccountId}:catalog"},
                                    {"Fn::Sub": "arn:aws:s3:::${Environment}-q-forecasting-artifacts"},
                                    {"Fn::Sub": "arn:aws:s3:::${Environment}-q-forecasting-artifacts/*"},
                                    {"Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:*"}
                                ]
                            },
                            {
                                "Sid": "LogsPolicy",
                                "Effect": "Allow",
                                "Action": [
                                    "logs:DescribeLogGroups",
                                    "logs:DeleteLogGroup"
                                ],
                                "Resource": [
                                    {"Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:*"}
                                ]
                            },
                            {
                                "Sid": "GlueStarPolicy",
                                "Effect": "Allow",
                                "Action": [
                                    "glue:CreateSecurityConfiguration",
                                    "glue:GetSecurityConfigurations",
                                    "glue:DeleteJob",
                                    "glue:DeleteSecurityConfiguration",
                                    "glue:CreateJob",
                                    "glue:CreateScript",
                                    "glue:StartJobRun",
                                    "glue:StartWorkflowRun",
                                    "glue:UpdateJob"
                                ],
                                "Resource": "*"
                            },
                            {
                                "Sid": "LogsStarPolicy",
                                "Effect": "Allow",
                                "Action": [
                                    "logs:GetLogRecord",
                                    "logs:GetLogDelivery",
                                    "logs:CreateLogGroup",
                                    "logs:DeleteLogStream",
                                    "logs:PutLogEvents",
                                    "logs:CreateLogStream"
                                ],
                                "Resource": "*"
                            },
                            {
                                "Sid": "S3StarPolicy",
                                "Effect": "Allow",
                                "Action": [
                                    "s3:HeadBucket"
                                ],
                                "Resource": "*"
                            },
                            {
                                "Action": [
                                    "ec2:CreateNetworkInterface",
                                    "ec2:DeleteNetworkInterface",
                                    "ec2:DescribeNetworkInterfaces",
                                    "ec2:DescribeSecurityGroups",
                                    "ec2:DescribeSubnets",
                                    "ec2:CreateTags",
                                    "ec2:DeleteTags",
                                    "ec2:DescribeVpcEndpoints",
                                    "ec2:DescribeRouteTables"
                                ],
                                "Resource": [
                                    "*"
                                ],
                                "Effect": "Allow",
                                "Sid": "EC2Perms"
                            }
                        ]
                    }
                }
            ]
        }
    },
    "GlueJob": {
        "Type": "AWS::Glue::Job",
        "Properties": {
            "Name": {
                "Fn::Join": [
                    "",
                    [
                        {
                            "Ref": "Environment"
                        },
                        "-",
                        {
                            "Ref": "Name"
                        }
                    ]
                ]
            },
            "Description": "This project calculates the dollars and transcount for the dates and trend values given by the daily sales algorithm process.",
            "Role": {
              "Ref": "Role"
            },
            "Command": {
                "Name": "glueetl",
                "PythonVersion": "3",
                "ScriptLocation": {
                    "Fn::Sub": "s3://${DeploymentBucket}/${ETLScriptS3Key}"
                }
            },
            "GlueVersion": "2.0",
            "WorkerType": "G.1X",
            "NumberOfWorkers": 3,
            "Timeout": 60,
            "Tags": {                  
                "Environment": {
                    "Ref": "Environment"
                }                   
            }
        }
    }
  }
}
